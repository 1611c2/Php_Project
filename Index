<?php

if(isset($_POST['btn_upl']))
{
	@$FileName = $_FILES['file_user']['name'];
	@$FileSize = $_FILES['file_user']['size'];
	@$FileType = $_FILES['file_user']['type'];
	@$FileError = $_FILES['file_user']['error'];
	@$FileTempName = $_FILES['file_user']['tmp_name'];
	
	if($FileError == 0)
	{
		$extension=explode(".",$FileName);
		$extension=end($extension);
		$extension= strtolower($extension);
		$allowedExt=array("jpg","jpeg","png","docx","txt","mp3","mp4","gif","rar","pdf","zip",".avi",".mov",".mpg"."3gp"."flv");
		
		if(in_array($extension,$allowedExt))
		{
			$newfilename = rand(12345689,999999999)."_".rand(12345,99999).".".$extension;
			$check=move_uploaded_file($FileTempName,"rashid/".$newfilename);
			if($check)
			{
				$path="rashid/".$newfilename;
				
				if(in_array($extension,array("jpg","jpeg","png")))
				{
				
					echo'<p><img src="'.$path.'" width="200px" height="200px"/></p>';
				}
				else if(in_array($extension,array("txt","docx","png","rar","zip","pdf")))
				{
					echo"<p>To Download (Right-Click And Save As)</p>";
					echo"<a href='".$path."' target='_blank'>Download Here</a>";
				}
				
				else if(in_array($extension,array("mp4",".avi",".mov",".mpg"."3gp"."flv")))
				{
					echo'
					<video width="400" controls>
					  <source src='.$path.' type="video/mp4">
					</video>';
				}
			}
			else
			{
				echo "<script> alert('Error While Uploading File')</script>";
			}
		}
		
		else
		{
			echo "<script> alert('File Type Is Not Supported') </script>";
		}
		
	}
	else
	{
		echo "<script> alert('File Has Error') </script>";
	}
}



?>
